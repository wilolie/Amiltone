{% extends 'base.html.twig' %}

{% block title %}Liste des éléves{% endblock %}

{% block body %}

<h1>Liste des élèves</h1>
<div class="container mt-5 mb-4 text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">nom</th> 
                <th scope="col">prénom</th> 
                <th scope="col">date de naissance</th>
                <th scope="col">action</th>

            </tr>
        </thead>
        <tbody>
            {% if students %}
                {% for student in students %}
                    <tr>
                        <th scope="row"> <a href="{{path('Show_Student',{'id':student.id})}}">{{ student.name }}</a>  </th>
                        <td>{{ student.firstname }}</td>
                        <td>{{ student.birthday |date("d/m/Y") }}</td>
                        <td>
                            <a href="{{path('add_note',{'id':student.id})}}" type="button" class="btn btn-success">ajouter une note</a>
                            <a href="{{path('modify_Student',{'id':student.id})}}" type="button" class="btn btn-primary">modifier élève</a>
                            <a href="{{path('delete_Student',{'id':student.id})}}" type="button" class="btn btn-danger">supprimer élève</a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <th scope="row" colspan=4> aucun élève </th>
                    
                </tr>
            {% endif %}
        </tbody>
    </table>
    <a href="{{path('add_Student')}}" type="button" class="btn btn-primary mt-5">ajouter un élève</a>
</div>
{% endblock %}
